{
  "name": "@ourheritage/ui",
  "version": "0.1.0",
  "description": "OurHeritage design system components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.json && tsc --project tsconfig.esm.json",
    "clean": "rimraf dist",
    "dev": "tsc --watch -p tsconfig.json",
    "prepare": "npm run build",
    "prepack": "npm run build && npm run lint && npm run bundlesize",
    "lint": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "bundlesize": "bundlesize"
  },
  "dependencies": {
    "clsx": "^1.2.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/theming": "^7.6.6",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.0.4",
    "bundlesize": "^0.18.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.3.3",
    "vite": "^4.4.9"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "bundlesize": [
    {
      "path": "./dist/esm/index.js",
      "maxSize": "50 kB"
    }
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "ourheritage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ourheritage-ui.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "pnpm": ">=8"
  }
}
