{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true,

    "baseUrl": "./src",
    "paths": {
      "#/*": ["./*"]    // âœ… Use # instead of @ for runtime compatibility
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.js",
    "types/**/*.d.ts",
    "src/prisma/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
