{
  "name": "@ourheritage/api",
  "version": "1.0.0",
  "description": "Our Heritage â€“ Express + Prisma Backend API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ./loader.mjs --no-warnings' tsx watch src/index.ts",
    "start": "node src/index.js",
    "start:production": "npm run prisma:generate && npm run prisma:migrate && cross-env NODE_ENV=production node src/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "npm run prisma:generate",
    "prepare": "npm run prisma:generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "cross-env NODE_ENV=test vitest run --coverage",
    "check": "npm run lint && npm run format && npm run test",
    "health": "node scripts/health-check.js",
    "seed": "tsx --tsconfig tsconfig.json src/prisma/seed.ts",
    "build": "tsc --project tsconfig.json"
  },
  "keywords": [
    "backend",
    "express",
    "api",
    "marketplace",
    "heritage",
    "prisma"
  ],
  "author": "Ahmed Abou Hashem <actual@email.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abouhashemahmed/Our-Arab-Heritage"
  },
  "bugs": {
    "url": "https://github.com/abouhashemahmed/Our-Arab-Heritage/issues"
  },
  "files": [
    "src/**/*",
    "prisma/**/*"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@prisma/client": "6.4.0",
    "@simplewebauthn/server": "13.1.1",
    "axios": "1.6.0",
    "bcrypt": "5.1.1",
    "bcryptjs": "^3.0.2",
    "cli-progress": "^3.12.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "crypto-js": "4.2.0",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "9.0.2",
    "morgan": "^1.10.0",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "rate-limit-redis": "4.2.0",
    "redis": "4.7.0",
    "stripe": "17.6.0",
    "ua-parser-js": "^2.0.3",
    "xss-clean": "^0.1.4",
    "yargs": "^17.7.2",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/node": "22.0.0",
    "@types/yargs": "^17.0.33",
    "cross-env": "7.0.3",
    "eslint": "9.3.0",
    "husky": "^9.1.7",
    "nodemon": "3.1.9",
    "prettier": "3.2.5",
    "prisma": "6.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "1.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
